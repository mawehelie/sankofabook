
<div class="page-header">
<h1>Status Page</h1>
</div>
<%= link_to "Submit a new status", new_status_path, class: "btn btn-warning" %> 
<% @statuses.each do |status|%>
<div class="status">
  <strong class="statusname"><%= status.name %></strong>
   <p><%= status.content %></p>
   <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      
      <span class="disp">
        |<%= link_to "Edit", edit_status_path(status) %> 
             |<%= link_to "Remove", status, method: :delete, data: { confirm: "Are you sure you wanted to remove this status?"}  %> 
    </div>
</div>

<% end %> 
